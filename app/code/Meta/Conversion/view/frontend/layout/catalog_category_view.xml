<?xml version="1.0"?>
<page layout="2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block class="Meta\Conversion\Block\Pixel\AddToCart"
                   name="fbe.pixel.add_to_cart"
                   template="Meta_Conversion::pixel/add_to_cart.phtml"
                   before="-" />
            <block class="Meta\Conversion\Block\Pixel\CustomizeProduct"
                   name="fbe.pixel.customize_product"
                   template="Meta_Conversion::pixel/customize_product.phtml"
                   before="-" />
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block class="Meta\Conversion\Block\Pixel\ViewCategory"
                   name="fbe.pixel.view_category"
                   template="Meta_Conversion::pixel/view_category.phtml"
                   before="-" />
        </referenceContainer>
    </body>
</page>
